{
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,

        "typeRoots": ["src/@types", "node_modules/@types"],

        "strict": true,
        "noImplicitAny": true
    },
    "include": ["./src"],
    "exclude": ["**/node_modules"],
    "references": [
        {
            "path": "../common"
        }
    ]
}
